<div class="flex flex-col items-center my-8">

  <h1 class="text-3xl text-center font-medium md:my16">Account</h1>

  <div class="max-w-6xl mx-auto justify-between items-center px-4">
    <div class="grid grid-cols-2">
      <div class="mx-2 px-2 py-4">
        <h6>Account details</h6>
        {{ customer.default_address | format_address }}

        <a href="{{ routes.account_addresses_url }}" class="text-sm text-gray-500">View addresses</a>
      </div>

      <div class="mx-2 px-2 py-4">
        {% if customer.orders.size > 0 %}

          <table class="table-fixed border-collapse border border-green-800 ...">
            <thead>
              <tr>
                <th class="border border-green-600 ...">State</th>
                <th class="border border-green-600 ...">City</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="border border-green-600 ...">Indiana</td>
                <td class="border border-green-600 ...">Indianapolis</td>
              </tr>
              <tr>
                <td class="border border-green-600 ...">Ohio</td>
                <td class="border border-green-600 ...">Columbus</td>
              </tr>
              <tr>
                <td class="border border-green-600 ...">Michigan</td>
                <td class="border border-green-600 ...">Detroit</td>
              </tr>
            </tbody>
          </table>
          <table class="table-auto border">
            <thead>
              <tr>
                <th class="border border-slate-500">Order #</th>
                <th class="border border-slate-500">Fullfilment Status</th>
                <th class="border border-slate-500">Payment Status</th>
                <th class="border border-slate-500">Order Date</th>
                <th class="border border-slate-500">Total</th>
              </tr>
            </thead>
          </table>
        {% endif %}
      </div>
    </div>
  </div>
</div>