<footer class="max-w-6xl bg-light py-5 mt-5 mx-auto items-center justify-center">
    <div class="grid grid-cols-1 md:grid-cols-{{ section.settings.col_num }} gap-{{ section.settings.col_num }}">
      {% for block in section.blocks %}
        {% assign item = block.settings %}
        {% if block.type == "link_list" %}
          <div class="col">
            <h5>{{ item.title }}</h5>
            {% assign footer_linklist = item.menu %}
            <ul class="list-unstyled text-small">
              {% for link in linklists[footer_linklist].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% else if block.type == "text" %}
          <div class="col">
            {% if item.logo != blank %}
              <img
                src="{{ item.logo | img_url: 'medium' }}"
                class="mb-5"
                width=""
                height="">
            {% endif %}
            <h5>{{ item.title }}</h5>
            <p>{{ item.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% if section.settings.enable_payment_type_icons %}
    <div class="container justify-content-center d-flex">
      {% for payment_type in shop.enabled_payment_types %}
        <img
          src="{{ payment_type | payment_type_img_url }}"
          width=""
          height="">
      {% endfor %}
    </div>
  {% endif %}

</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "range",
        "id": "col_num",
        "default": 3,
        "min": 2,
        "max": 4,
        "label": "Number of Columns"
      }, {
        "type": "checkbox",
        "id": "enable_payment_type_icons",
        "label": "Enable Payment Type Icons",
        "default": true
      }
    ],
    "max_blocks": 4,
    "blocks": [
      {
        "type": "link_list",
        "name": "Navigation",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Quick Links"
          }, {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }

        ]
      }, {
        "type": "text",
        "name": "Store details",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Store Logo"
          }, {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Store information"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}