<div class="flex flex-col items-center my-8">
  <h1 class="text-3xl font-medium my-8 md:my16">Login</h1>

  {% form 'customer_login' %}
    <div class="max-w-6xl mx-auto justify-center flex-1 items-center px-4">
      <div class="flex px-3 mb-3">
        <label for="emailAddress" class="text-gray-500 ">Email Address</label>
        <input
          type="email"
          name="customer[email]"
          id="emailAddress">
      </div>

      <label for="password" class="">Password</label>
      <input
        type="password"
        name="customer[password]"
        id="password"
        class="">

      <input type="submit" value="Login">
    </div>
  {% endform %}

</div>